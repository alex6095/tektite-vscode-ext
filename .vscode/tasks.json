{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "isBackground": false,
            "presentation": {
                "reveal": "silent"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": "build"
        },
        {
            "label": "Build Webview",
            "type": "shell",
            "command": "cd webview-ui && npm run build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Full Build",
            "dependsOn": [
                "Build Webview",
                "npm: compile"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}